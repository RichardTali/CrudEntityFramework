@model CRUDPRODUCTO.Models.Producto

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Estás seguro de eliminar el producto?</h3>
<br />
<form asp-action="EliminarConfirmado" asp-controller="Home" method="post">
    <input type="hidden" asp-for="IdProducto" />
    <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
    <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
</form>

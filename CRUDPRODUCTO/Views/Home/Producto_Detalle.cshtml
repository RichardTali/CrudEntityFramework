@model CRUDPRODUCTO.Models.ViewModels.ProductoVM
@{
    ViewData["Title"] = "Producto_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.oProducto.IdProducto == 0)
{
    <h1>Crear Empleado</h1>
}else{
    <h1>Editar Empleado</h1>
}


<div class="row">
    <div class="col-sm-4">

        <form asp-action="Producto_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oProducto.IdProducto" />

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.IdProducto">Nombre Producto</label>
                <input class="form-control form-control-sm" asp-for="oProducto.NombreProducto" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.PrecioProducto">Precio del Producto</label>
                <input class="form-control form-control-sm" asp-for="oProducto.PrecioProducto" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.CantidadProducto">Cantidad</label>
                <input class="form-control form-control-sm" asp-for="oProducto.CantidadProducto" type="text" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oProducto.oCategoria.IdCategoria">Categoria</label>
                <select class="form-select form-select-sm" asp-for="oProducto.IdCategoria" asp-items="@Model.oListaCategoria">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>

            <div class="mb-2">

                @if (Model.oProducto.IdProducto == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
            </div>

        </form>
    </div>
</div>


